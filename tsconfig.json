{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": ".",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "target": "ES2022",
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true
  }
}
